{
  "ConnectionStrings": {
    // при работе с действующем сервером SQL необходимо будет указать для подключения Host + Port, пользователя и пароль:
    "PostgreSqlDbConnection": "Host=localhost;Port=5432;Database=MtChangeLog;Username=postgres;Password=admin",

    // используется для отладки в DEBUG режиме, пс ну можно юзать и на постоянной основе  при желании:
    "SqLiteDbConnection": "Data Source=MtChangeLog.db",

    // используется для выполнения unit тестов:
    "TestDbConnection": "Data Source=Test.db"
  },
  "SqlProvider": "SQLite",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}
